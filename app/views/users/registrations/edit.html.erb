<div class="container-fluid">

  <div class="modal-dialog modal-transparent">
    <div class="modal-content modal-shadow">

      <div class="text-center mt-4">
        <h2><a href="/" class="a-color-black">CNU.GROUP</a></h2>
      </div>

      <div class="container m-0">
        <hr/>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.email_field :email, class: 'form-control', placeholder: '이메일', readonly: 'true' %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="alert alert-warning">Currently waiting confirmation for:
          <%= resource.unconfirmed_email %>
        </div>
        <% end %>

        <div class="form-group">
          <%= f.text_field :name, class: 'form-control', placeholder: '이름', readonly: 'true' %>
        </div>

        <div class="form-group">
          <%= f.text_field :studentid, class: 'form-control', placeholder: '학번', readonly: 'true' %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", class: 'form-control passwordPress', placeholder: '변경 비밀번호'  %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control passwordPress', placeholder: '비밀번호 확인'  %>
        </div>

        <div class="form-group">
          <%= f.password_field :current_password, autocomplete: "off", class: 'form-control passwordPress', placeholder: '현재 비밀번호'  %>
          <div class="mt-2">
            <span class="capsLockView" style="color:red; display: none;">Caps Lock is ON</span>
          </div>
        </div>

        <div class="form-group">
          <%= f.submit "저장", class: 'btn btn-block btn-outline-primary' %>
        </div>
        <% end %>
        <hr>

        <div class="btn btn btn-outline-secondary btn-block">회원탈퇴</div>

        <br/>

      </div>

    </div>
  </div>
</div>


<!-- capsLock JS  -->
<%= render "templates/capsLockJS" %>
