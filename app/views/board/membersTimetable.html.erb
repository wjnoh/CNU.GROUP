<%= render "templates/navbar" %>

<div class="wrapper">
  <!-- 메인사진 -->
  <%= render "/board/templates/header" %>

  <div class="container">
    <div class="row">
      <!-- 좌측 영역 -->
      <%= render "board/templates/groupNav" %>

      <!-- 우측 영역 -->
      <%= render "board/templates/membersTimetable/membersCard" %>
    </div>
  </div>
</div>

<%= render "templates/footer" %>


<script>
  function readTimetableMaster(){
    <% unless @masterTimetable.nil? %>
      window.open("/timetable/<%= @masterTimetable.id %>", "" , "width=500 ,height=500, scrollbars=yes");
    <% end %>
  };

  function readTimetableUser(){
    var timetableID = $("#timetableID").val()
    window.open("/timetable/"+timetableID, "" , "width=500 ,height=500, scrollbars=yes");
  }

  $(".analysisClick").on("click", function(event){
    var checkCount = document.querySelectorAll('input[type="checkbox"]:checked').length
    if(checkCount < 2){
      alert("2명 이상의 시간표를 선택해주세요.");
      event.preventDefault();
    }else{
      var myForm = document.popForm;
      var url = "/board/<%=@boardID%>/analysisTimetable";

      window.open("" ,"popForm", "width=500 ,height=500, scrollbars=yes");

      myForm.action = url;
      myForm.method = "post";
      myForm.target = "popForm";
      myForm.submit();
    }
  })

</script>
