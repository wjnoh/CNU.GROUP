<div class="tab-pane active" id="information" role="tabpanel">

  <div class="card mb-4 mt-4">
    <div class="card-body pb-0 pt-3">
      <%= form_tag("/board", method: :patch) do%>
      <%= hidden_field_tag :boardID, "#{@boardID}" %>

      <div class="form-group row mb-2">
        <span class="col-lg-2 col-form-label text-center">모임 이름</span>
        <div class="col-lg-10 mb-2">
          <%= text_field_tag :boardName, "#{@board.title}" , class: "form-control" ,required: true %>
        </div>
      </div>

      <div class="form-group row mb-3">
        <span class="col-lg-2 col-form-label text-center">모임 설명</span>
        <div class="col-lg-10">
          <%= text_field_tag :groupInfo, "#{@board.info}" , class: "form-control" , required: true %>
        </div>
      </div>

      <div class="form-group row mb-0">
        <span class="col-lg-2 col-form-label text-center">관심사</span>
        <div class="col-lg-3 mb-3">
          <select name="category" class="select form-control category" id="example-text-input">
            <option>스터디</option>
            <option>운동</option>
            <option>취미</option>
            <option>사교</option>
            <option>자유주제</option>
          </select>
        </div>
        <span class="col-lg-2 col-form-label text-center">모임 정원</span>
        <div class="col-lg-3 mb-3">
          <%= text_field_tag :totalNumberOfMember, "#{@board.totalNumberOfMember}", type: "number", class: "form-control",
                  placeholder: "모임 정원", min: "#{@board.memberCount}", max: "50", required: true %>
        </div>
        <div class="col-lg-2">
          <% if @boardMaster == current_user %>
            <%= submit_tag '수정' , class: "btn btn-outline-primary btn-block mb-3" %>
          <% end %>
        </div>
      <% end %>
      </div>

    </div>
  </div>

</div>
