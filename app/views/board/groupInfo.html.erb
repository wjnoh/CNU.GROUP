<%= render "templates/navbar" %>

<div class="wrapper">
  <!-- 메인사진 -->
  <%= render "/board/templates/header" %>

  <div class="container">
    <div class="row">
      <!-- 좌측 영역 -->
      <%= render "board/templates/groupNav" %>

      <!-- 우측 영역 -->
      <section class="col-12 col-lg-9 pt-4">

        <ul class="nav nav-pills d-flex justify-content-center main-nav-custom info-menu-font-size" role="tablist">
          <li class="nav-item">
            <a class="nav-link active nav-link-custom a-color-black" data-toggle="tab" href="#information" role="tab">모임정보</a>
          </li>
          <li class="nav-item">
            <a class="nav-link nav-link-custom a-color-black" data-toggle="tab" href="#introduce" role="tab">모임소개</a>
          </li>
          <% if @boardMaster == current_user %>
            <li class="nav-item">
              <a class="nav-link nav-link-custom a-color-black" data-toggle="tab" href="#apply" role="tab">신청관리</a>
            </li>
          <% end %>
          <li class="nav-item">
            <a class="nav-link nav-link-custom a-color-black" data-toggle="tab" href="#person" role="tab">구성원</a>
          </li>
        </ul>

        <!-- 탭 내용 -->
        <div class="tab-content">
          <!-- 모임 정보 수정 -->
          <%= render "/board/templates/groupInfo/groupInfoUpdate" %>

          <!-- 소개 카드 -->
          <%= render "/board/templates/groupInfo/groupInfoPost" %>

          <!-- 참여 신청자 카드 -->
          <%= render "/board/templates/groupInfo/applyManage" %>

          <!-- 모임 구성원 카드 -->
          <div class="tab-pane" id="person" role="tabpanel">
            <div class="row">
              <% if @boardMaster == current_user %>
                <%= render "board/templates/groupInfo/membersforMaster" %>
              <% else %>
                <%= render "board/templates/groupInfo/membersforUser" %>
              <% end %>
            </div>
          </div>
        </div>
        <!-- 탭 내용 끝 -->

      </section>
      <!-- 우측 영역 끝 -->
    </div>
  </div>
</div>

<%= render "templates/footer" %>


<%= render "board/templates/postsJS" %>
<script>
  $( document ).ready(function() {
    var category = "<%=@boardCategory%>";
    $(".select").val(category);
  });
</script>
